{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "yarn build",
    "beforeDevCommand": "yarn dev",
    "devPath": "http://localhost:3000",
    "distDir": "../dist"
  },
  "package": {
    "productName": "RunMath",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "globalShortcut": {
        "all": true
      },
      "clipboard": {
        "writeText": true
      },
      "process": {
        "exit": true
      },
      "window": {
        "create": true,
        "hide": true,
        "close": true,
        "unminimize": true,
        "setFocus": true,
        "show": true,
        "startDragging": true
      },
      "fs": {
        "createDir": true,
        "readDir": true,
        "readFile": true,
        "writeFile": true,
        "scope": [
          "$APPCONFIG",
          "$APPCONFIG/*"
        ]
      },
      "path": {
        "all": true
      },
      "notification": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Utility",
      "copyright": "David JimÃ©nez â’¸ 2023",
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "dev.dubis.runmath",
      "longDescription": "Do math, quickly ðŸš€",
      "resources": [],
      "shortDescription": "",
      "targets": [
        "msi",
        "updater"
      ],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "alwaysOnTop": true,
        "label": "main",
        "fullscreen": false,
        "height": 100,
        "resizable": false,
        "width": 700,
        "center": true,
        "decorations": false,
        "transparent": true
      }
    ]
  }
}
